---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">
        {{ site.last_name }}
    </h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>


  <article>
    {% if page.profile2 %}
      <div class="profile2 float-{% if page.profile2.align == 'top' %}top{% else %}bottom{% endif %}" style="margin: 10px;">
        {% if page.profile2.image %}
          {% assign profile2_image_path = page.profile2.image | prepend: 'assets/img/' %}
          {% if page.profile2.image_circular %}
            {% assign profile2_image_class = 'img-fluid z-depth-1 rounded-circle' %}
          {% else %}
            {% assign profile2_image_class = 'img-fluid z-depth-0
      rounded' %}
          {% endif %}
          {% capture sizes %}(min-width: {{site.max_width}}) {{ site.max_width | minus: 30 | times: 0.3}}px, (min-width: 800px)
      30vw, 95vw"{% endcapture %}
          {%
            include figure.liquid loading="eager" path=profile2_image_path class=profile2_image_class sizes=sizes alt=page.profile2.image
            cache_bust=true
          %}
        {% endif %}
        {% if page.profile2.more_info %}
          <div class="more-info">{{ page.profile2.more_info }}</div>
        {% endif %}
      </div>
    {% endif %}




    <div class="clearfix">{{ content }}</div>






